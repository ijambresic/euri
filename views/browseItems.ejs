<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/fontFaces.css">
    <link rel="stylesheet" href="/styles/browseItemsStyle.css">
    <script src="/scripts/browseItemsScript.js" defer></script>
    <title>LootLake - Browsing</title>
</head>
<body>
    <header>
        <h1>LootLake</h1>

        <nav>
            <ul>
                <li class="selected"><a href="#">Browse</a></li>
                <li><a href="#">Odabrano</a> <span class="navSelectedItemsWorth">€0</span> </li>
                <li><a href="#">Stats</a></li>
            </ul>
        </nav>
    </header>

    <main id="itemsList">
        <% items.forEach((item)=>{ %>
            <div class="item" id="<%= item.id %>">
                <img class="itemImage" src="<%= item.imgUrl %>" alt="and">
                <div class="itemTextInfo">
    
                    <p class="title"><%= item.title %></p>
                    <div class="tagsContainer">
                        <div class="tag"><%= item.subgroup %></div>
                        <div class="tag"><%= item.issue %></div>
                    </div>
                    <div class="priceAndQtyContainer noneSelected">
                        <div class="leftSide">
                            <p class="price">€ <%= item.price %></p>
                            <p class="times">x</p>
                            <p class="qty">0 kom</p>
                        </div>
                        <div class="rightSide">= 0 €</div>
                    </div>
    
                </div>
                <div class="iconButton" data-button-type="add">
                    <img src="/images/icons/plus.svg" alt="Add item to cart">
                </div>
            </div>
        <% }); %>
    </main>

    <div class="filtersContainer">
        <select name="countryDropdown" id="countryDropdown">
            <option value="1">Srbija</option>
            <option value="2">Hrvatska</option>
            <option value="3">Bosna i Hercegovina</option>
            <option value="4">Crna Gora</option>
            <option value="5">Slovenija</option>
            <option value="6">Makedonija</option>
        </select>

        <select name="yearDropdown" id="yearDropdown">
            <option value="1">2020</option>
            <option value="2">2019</option>
            <option value="3">2018</option>
            <option value="4">2017</option>
            <option value="5">2016</option>
            <option value="6">2015</option>
        </select>
    </div>
</body>
</html>